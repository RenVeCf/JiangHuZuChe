<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

    <View
        android:layout_width="match_parent"
        android:layout_height="7dp"
        android:background="@color/bg_crude_line" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/y100"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingEnd="@dimen/x50"
        android:paddingStart="@dimen/x50">

        <TextView
            android:id="@+id/tv_repair_order_num"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="@color/tx_bottom_navigation" />

        <TextView
            android:id="@+id/tv_repair_order_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/tx_bottom_navigation" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/bg_fine_line"
        android:paddingEnd="@dimen/x50"
        android:paddingStart="@dimen/x50" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/y50"
        android:paddingEnd="@dimen/x50"
        android:paddingStart="@dimen/x50"
        android:paddingTop="@dimen/y50">

        <ImageView
            android:id="@+id/iv_store_logo"
            android:layout_width="@dimen/x200"
            android:layout_height="@dimen/y200"
            android:scaleType="fitXY"
            app:srcCompat="@drawable/ic_launcher" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/y20"
            android:layout_marginStart="@dimen/x30"
            android:layout_marginTop="@dimen/y20"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1.5"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_store_name"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textColor="@color/black"
                    android:textSize="16sp" />

                <Button
                    android:id="@+id/bt_repair_order_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textColor="@color/white" />
            </LinearLayout>

            <TextView
                android:id="@+id/tv_repair_order_project"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_marginTop="@dimen/y20"
                android:layout_weight="1"
                android:textColor="@color/tx_bottom_navigation" />

            <TextView
                android:id="@+id/tv_repair_order_service_type"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_marginTop="@dimen/y20"
                android:layout_weight="1"
                android:textColor="@color/tx_bottom_navigation" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
